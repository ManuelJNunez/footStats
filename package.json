{
  "name": "footstats",
  "version": "1.0.0",
  "description": "Pequeña aplicación para que los entrenadores guarden las estadísticas de su equipo para dirigir mejor los entrenamientos.",
  "main": "src/index.ts",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "nest start",
    "build": "nest build",
    "test": "mocha -r ts-node/register 'test/**/*.ts'",
    "test:cov": "nyc npm run test",
    "coverage-report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "eslint --ext .js,.ts src/ test/ functions/ telegram/",
    "format": "prettier --write \"src/**/*.ts\" \"test/*.ts\"",
    "doc": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ManuelJNunez/footStats.git"
  },
  "author": "Manuel Jesus Nuñez Ruiz",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ManuelJNunez/footStats/issues"
  },
  "homepage": "https://github.com/ManuelJNunez/footStats#readme",
  "devDependencies": {
    "@nestjs/testing": "^7.5.5",
    "@types/chai": "^4.2.13",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "chai": "^4.2.0",
    "codecov": "^3.8.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.2.0",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/platform-express": "^7.5.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3"
  }
}
